<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--layout principal-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="15sp">

        <!-- columna de botones izquierda -->
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="end|bottom"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0sp"
                android:layout_gravity="start"
                android:layout_weight=".6"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="10sp">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnActivar"
                    android:layout_width="54sp"
                    android:layout_height="54sp"
                    android:background="@drawable/ic_activarbt" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDesconectar"
                    android:layout_width="54sp"
                    android:layout_height="54sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/ic_desbt" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDispositivosBT"
                    android:layout_width="54sp"
                    android:layout_height="54sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/ic_buscarbt" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0sp"
                android:layout_weight=".4"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnIzquierda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_izquierda" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDerecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:background="@drawable/ic_derecha" />
            </LinearLayout>
        </LinearLayout>

        <!-- columna de botones derecha -->
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight=".3"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinnerCarrito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnConectar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Conectar" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight=".7"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center_horizontal|bottom|end"
            android:orientation="vertical"
            android:paddingEnd="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight=".4"
                android:gravity="end"
                android:orientation="vertical">

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/swVerde"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Led Verde" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/swRojo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Led Rojo" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight=".3"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAdelante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_arriba" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAtras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/ic_abajo" />
            </LinearLayout>

        </LinearLayout>
        <!---->

    </LinearLayout>
    <!---->
</androidx.constraintlayout.widget.ConstraintLayout>