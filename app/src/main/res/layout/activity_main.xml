<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--layout principal-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- columna de botones izquierda -->
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_weight=".3"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnActivar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activar" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDispositivosBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Dispositivos BT" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150sp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnIzquierda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Izquierda" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDerecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:text="Derecha" />
            </LinearLayout>
        </LinearLayout>

        <!-- columna de botones central -->
        <!---->

        <!-- columna de botones derecha -->
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_weight=".3"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinnerCarrito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEncenderVerde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80sp"
                android:text="Encender Verde" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApagarVerde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Apagar Verde" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEncenderRojo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Encender Rojo" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApagarRojo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Apagar Rojo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_weight=".3"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConectar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Conectar" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDesconectar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Desconectar" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAdelante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100sp"
                android:text="Adelante" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAtras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="AtrÃ¡s" />


        </LinearLayout>
        <!---->

    </LinearLayout>
    <!---->
</androidx.constraintlayout.widget.ConstraintLayout>